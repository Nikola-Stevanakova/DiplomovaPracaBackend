<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://petriflow.com/petriflow.schema.xsd">
    <id>person</id>
    <initials>PRS</initials>
    <title>Osoba</title>
    <icon>device_hub</icon>
    <defaultRole>true</defaultRole>
    <anonymousRole>true</anonymousRole>
    <transitionRole>false</transitionRole>

	<caseEvents>
		<event type="create">
			<id>main_form_create_vehicle_case</id>
			<actions phase="post">
				<action>
					vehicle_ids: f.vehicle_ids,
					vehicle_forms: f.vehicle_forms;

					def vehicleCase = createCase("vehicle")
					String taskId = vehicleCase.tasks.find { it.transition == "t1" }.task

					change vehicle_ids value { [vehicleCase.stringId] }
					change vehicle_forms value { [taskId] }
				</action>
			</actions>
		</event>
	</caseEvents>

    <role>
        <id>system</id>
        <title>System</title>
    </role>

    <data type="text">
        <id>person_name</id>
        <title>Meno</title>
    </data>
    <data type="text">
        <id>telephone_number</id>
        <title>Telefónne číslo</title>
    </data>
	<data type="taskRef">
		<id>vehicle_forms</id>
		<title/>
	</data>
	<data type="number">
		<id>sequence_number</id>
		<title>Poradové číslo</title>
	</data>
	<data type="file">
		<id>document_file</id>
		<title/>
	</data>
	<data type="date">
		<id>date_of_registration</id>
		<title>Dátum registrácie</title>
	</data>
	<data type="boolean">
		<id>request_submitted</id>
		<title>Podaná žiadosť</title>
		<init>false</init>
	</data>
	<data type="enumeration">
		<id>nationality_enumeration</id>
		<title>Národnosť (enumerácia)</title>
		<options>
			<option key="slovenska">slovenská </option>
			<option key="madarska">maďarská</option>
			<option key="ukrajinska">ukrajinská</option>
		</options>
	</data>
	<data type="enumeration_map">
		<id>nationality_enumeration_map</id>
		<title>Národnosť (enumeračná mapa)</title>
		<options>
			<option key="slovenska">slovenská</option>
			<option key="madarska">maďarská </option>
			<option key="ukrajinska">ukrajinská</option>
		</options>
	</data>
	<data type="multichoice">
		<id>subjects</id>
		<title>Predmety (multichoice)</title>
		<options>
			<option key="slovensky_jazyk">slovenský jazyk</option>
			<option key="matematika">matematika</option>
			<option key="fyzika">fyzika</option>
		</options>
	</data>
	<data type="multichoice_map">
		<id>subjects_map</id>
		<title>Predmety(multichoice mapa)</title>
		<options>
			<option key="sj">slovenský jazyk</option>
			<option key="ma">matematika</option>
			<option key="fy">fyzika</option>
		</options>
	</data>
	<data type="i18n">
		<id>vehicle_header</id>
		<title/>
		<init>Vozidlo</init>
	</data>

	<!-- ASSOCIATION -->
	<data type="caseRef">
		<id>vehicle_ids</id>
		<title/>
		<allowedNets>
			<allowedNet>vehicle</allowedNet>
		</allowedNets>
	</data>
	<data type="caseRef">
		<id>classroom_id</id>
		<title/>
		<allowedNets>
			<allowedNet>classroom</allowedNet>
		</allowedNets>
	</data>

	<data type="button">
		<id>remove_from_database</id>
		<title/>
		<placeholder>Odstrániť formulár</placeholder>
		<component>
			<name>flat</name>
		</component>
		<event type="set">
			<id>remove_from_database_set</id>
			<actions phase="post">
				<action>
					removeFromDatabase()
				</action>
			</actions>
		</event>
	</data>
	<data type="button">
		<id>update_form_button</id>
		<title/>
		<placeholder>Aktualizovať formulár</placeholder>
		<component>
			<name>stroked</name>
		</component>
		<event type="set">
			<id>update_form_button_set</id>
			<actions phase="post">
				<action>
					updateOrInsert()
				</action>
			</actions>
		</event>
	</data>
    <transition>
        <id>t1</id>
        <x>300</x>
        <y>100</y>
        <label>Osoba</label>
        <roleRef>
            <id>system</id>
            <logic>
                <perform>true</perform>
            </logic>
        </roleRef>
        <dataGroup>
            <id>t1_0</id>
            <cols>4</cols>
            <layout>grid</layout>
			<dataRef>
				<id>person_name</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>0</x>
					<y>0</y>
					<rows>1</rows>
					<cols>2</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>telephone_number</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>2</x>
					<y>0</y>
					<rows>1</rows>
					<cols>2</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>sequence_number</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>0</x>
					<y>1</y>
					<rows>1</rows>
					<cols>2</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>document_file</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>2</x>
					<y>1</y>
					<rows>1</rows>
					<cols>2</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>date_of_registration</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>0</x>
					<y>2</y>
					<rows>1</rows>
					<cols>2</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>request_submitted</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>2</x>
					<y>2</y>
					<rows>1</rows>
					<cols>2</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>nationality_enumeration</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>0</x>
					<y>3</y>
					<rows>1</rows>
					<cols>2</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>vehicle_forms</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>0</x>
					<y>6</y>
					<rows>1</rows>
					<cols>4</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>vehicle_header</id>
				<logic>
					<behavior>visible</behavior>
				</logic>
				<layout>
					<x>0</x>
					<y>5</y>
					<rows>1</rows>
					<cols>4</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
				<component>
					<name>divider</name>
				</component>
			</dataRef>
			<dataRef>
				<id>remove_from_database</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>2</x>
					<y>7</y>
					<rows>1</rows>
					<cols>1</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>update_form_button</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>3</x>
					<y>7</y>
					<rows>1</rows>
					<cols>1</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
			<dataRef>
				<id>subjects_map</id>
				<logic>
					<behavior>editable</behavior>
				</logic>
				<layout>
					<x>0</x>
					<y>4</y>
					<rows>1</rows>
					<cols>2</cols>
					<template>material</template>
					<appearance>outline</appearance>
				</layout>
			</dataRef>
        </dataGroup>
        <event type="assign">
            <id>t1_assign</id>
        </event>
        <event type="finish">
            <id>t1_finish</id>
        </event>
        <event type="cancel">
            <id>t1_cancel</id>
        </event>
        <event type="delegate">
            <id>t1_delegate</id>
        </event>
    </transition>
</document>