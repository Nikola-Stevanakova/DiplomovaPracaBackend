<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://petriflow.com/petriflow.schema.xsd">
    <id>vehicle</id>
    <initials>VHC</initials>
    <title>Vehicle</title>
    <icon>device_hub</icon>
    <defaultRole>true</defaultRole>
    <anonymousRole>true</anonymousRole>
    <transitionRole>false</transitionRole>

    <role>
        <id>system</id>
        <title>System</title>
    </role>

    <data type="enumeration">
        <id>type</id>
        <title>Typ</title>
        <options>
            <option key="SUV">SUV</option>
            <option key="Combi">Combi</option>
            <option key="Hatchback">Hatchback</option>
        </options>
        <init>SUV</init>
    </data>
    <data type="enumeration">
        <id>brand</id>
        <title>Značka</title>
        <options>
            <option key="Škoda">Škoda</option>
            <option key="Mercedes">Mercedes</option>
            <option key="Audi">Audi</option>
        </options>
    </data>
    <data type="text">
        <id>color</id>
        <title>Farba</title>
    </data>
    <data type="number">
        <id>seat_count</id>
        <title>Počet miest (bez vodiča)</title>
    </data>

    <data type="caseRef">
        <id>person_id</id>
        <title/>
        <allowedNets>
            <allowedNet>person</allowedNet>
        </allowedNets>
    </data>
    <data type="taskRef">
        <id>person_form</id>
        <title/>
    </data>

    <transition>
        <id>t1</id>
        <x>220</x>
        <y>100</y>
        <label>Vozidlo</label>
        <roleRef>
            <id>system</id>
            <logic>
                <perform>true</perform>
            </logic>
        </roleRef>
        <dataGroup>
            <id>t1_0</id>
            <cols>6</cols>
            <layout>grid</layout>
        </dataGroup>
        <event type="assign">
            <id>t1_assign</id>
        </event>
        <event type="finish">
            <id>t1_finish</id>
        </event>
        <event type="cancel">
            <id>t1_cancel</id>
        </event>
        <event type="delegate">
            <id>t1_delegate</id>
        </event>
    </transition>
</document>